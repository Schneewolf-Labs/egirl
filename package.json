{
  "name": "egirl",
  "version": "0.1.0",
  "description": "Local-first AI agent for Schneewolf Labs",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "egirl": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "cli": "bun run src/index.ts cli",
    "api": "bun run src/index.ts api",
    "test": "bun test",
    "lint": "biome check src/ test/",
    "lint:fix": "biome check --fix src/ test/",
    "typecheck": "tsc --noEmit",
    "check": "bun run lint && bun run typecheck",
    "dashboard": "bun run scripts/serve-dashboard.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@anthropic-ai/sdk": "^0.39.0",
    "@sinclair/typebox": "^0.34.0",
    "@xmpp/client": "^0.14.0",
    "discord.js": "^14.25.1",
    "openai": "^4.77.0",
    "playwright": "^1.58.2",
    "smol-toml": "^1.6.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@types/bun": "^1.1.0",
    "@types/xmpp__client": "^0.14.1",
    "typescript": "^5.7.0"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "local-first",
    "llama.cpp",
    "claude",
    "openai"
  ],
  "license": "MIT"
}
