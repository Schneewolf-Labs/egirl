# egirl configuration

# Workspace directory
EGIRL_WORKSPACE=~/.egirl/workspace

# Local model configuration
EGIRL_LOCAL_PROVIDER=llamacpp
EGIRL_LOCAL_ENDPOINT=http://localhost:8080
EGIRL_LOCAL_MODEL=default
EGIRL_LOCAL_CONTEXT_LENGTH=8192

# Remote models (optional - only needed for escalation)
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...

# Routing configuration
EGIRL_DEFAULT_MODEL=local
EGIRL_ESCALATION_THRESHOLD=0.4

# Discord channel (optional)
DISCORD_BOT_TOKEN=
DISCORD_ALLOWED_USERS=
